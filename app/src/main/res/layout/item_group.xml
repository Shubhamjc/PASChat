<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/groupItemHeight"
    android:padding="@dimen/outerMargins"
    android:orientation="horizontal"
    android:background="@color/groupItemBackground">

    <ImageView
        android:id="@+id/groupIcon"
        android:layout_width="@dimen/groupIconSize"
        android:layout_height="@dimen/groupIconSize"
        android:layout_gravity="center"
        android:src="@drawable/ic_group_60dp"
        android:background="@drawable/group_icon" />

    <TextView
        android:id="@+id/groupTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/listView_padding"
        android:textSize="@dimen/groupTextSize"
        android:textColor="@color/groupText"
        android:gravity="center_vertical" />

</LinearLayout>