<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shubham.paschat.signin">

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="@dimen/userNameEditTextWidth"
        android:layout_height="@dimen/userNameEditTextHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/userNameHint"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/signInPhoneBtn"
        style="@style/signInBtnPhone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="signInPhoneAct" />

</RelativeLayout>
